{% extends 'base.html.twig' %}

{% block title %}
    The best series | {{ parent() }}
{% endblock %}

{% block body %}
    <section class="serie-list">
        {% for show in series %}
            <article>
                <a href="{{ path('series_details', {'id': show.id}) }}" title="Click to see info | {{ show.seasons|length }} seasons">
                    <img src="{{ asset('img/posters/series/' ~ show.poster) }}" alt="{{ show.name }}">
                </a>
            </article>
        {% endfor %}
    </section>
{% endblock %}


